@model List<congngheweb.Models.booking>
@{
    ViewBag.Title = "BookingHistory";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}

<!-- Container Fluid-->
<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">@ViewBag.title</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Home</a></li>
            <li class="breadcrumb-item">Tables</li>
            <li class="breadcrumb-item active" aria-current="page">@ViewBag.title</li>
        </ol>
    </div>

    <div class="row">
        <div class="col-lg-12 mb-4">
            <!-- Simple Tables -->
            <div class="card">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">@ViewBag.title</h6>
                </div>
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th>Code</th>
                                <th>Customer</th>
                                <th>Phone</th>
                                <th>status</th>
                                <th>Create at</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var bk in Model)
                            {
                                <tr>
                                    <td>@bk.code</td>
                                    <td>@bk.fullname</td>
                                    <td>@bk.phonenumber</td>
                                    <td><span class="badge badge-@(bk.status == 0 ? "info" : "success")">@(bk.status == 0 ? "Unconfirmred" : "Confimred")</span></td>
                                    <td>@bk.created_at</td>
                                    <td style="display: flex; gap: 10px">
                                        <a href="~/Admin/BookingDetail?id=@bk.id" class="btn btn-sm btn-primary">Detail</a>
                                        @if (bk.status == 0)
                                        {


                                            <a href="~/Admin/Confirm?id=@bk.id" class="btn btn-sm btn-success">Confirmred</a>
                                        }
                                        else
                                        {
                                            <a href="~/Admin/DeleteRequest?id=@bk.id" class="btn btn-sm btn-danger">Delete</a>
                                        }

                                    </td>
                                    <!-- Thêm các cột khác tương ứng -->
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
                <div class="card-footer"></div>
            </div>
        </div>
    </div>
    <!--Row-->

</div>
<!---Container Fluid-->